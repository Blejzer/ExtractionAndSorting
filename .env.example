# === Flask ===
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET=replace_with_random_secret_key
PORT=5000

# === MongoDB ===
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your_cluster.mongodb.net
DB_NAME=event_management
MONGODB_URI=mongodb+srv://${DB_USER}:${DB_PASSWORD}@${DB_HOST}/${DB_NAME}?retryWrites=true&w=majority&appName=Cluster0&tls=true

# === Admin user seed (local dev only) ===
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me

# === App settings ===
TIMEZONE=Europe/Zagreb
LOG_LEVEL=INFO
UPLOADS_DIR=uploads
FILES_DIR=FILES
